{
    "manifest_version": 2,
    "name": "Native Messager",
    "version": "1.0",

    "description": "Sends a native message to RunWhisper, keeps track of output",

    "icons": {
        "128": "icons/tux.png"
    },

    "permissions": ["*://echo360.org.uk/*", "nativeMessaging", "unlimitedStorage", "downloads", "activeTab"],

    "browser_action": {
        "default_icon": "icons/tux.png",
        "default_title": "Native Messager",
        "default_popup": "popup/popup.html"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "nativemessenger@example.com"
        }
    }
}
